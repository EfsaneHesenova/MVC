@model Work;
<form method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description">
    </div>
    <div class="form-group">
        <label asp-for="MainImageUrl"></label>
        <input class="form-control" asp-for="MainImageUrl">
    </div>
    <div class="form-group">
        <select class="form-select" asp-for=ServiceId asp-items="new SelectList(ViewBag.Services, nameof(Service.Id), nameof(Service.Title))">
                <option selected hidden>Please select service</option>
            </select>
            <div>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
